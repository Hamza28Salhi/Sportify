          <h2 class="heading">Blog</h2>
        </div>
      </div>


  <div class="row">
        

     
    <div class="row">
      {% for i in post %}
        <div class="col-lg-4 mb-4">
          <div class="custom-media d-block">
            {#<td> <img src="{{ asset('images/posts/' ~ i.getImagePost()) }}" alt="Image du post" style="max-height: 250px"> </td>#}
