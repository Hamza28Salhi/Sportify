<script>
  function incrementQuantite() {
    var quantiteInput = document.getElementById("quantite");
    var quantite = parseInt(quantiteInput.value);
    var maxQuantite = parseInt(quantiteInput.max);
    var plusButton = document.querySelector("div[onclick='incrementQuantite()']");
    if (quantite < maxQuantite) {
      quantiteInput.value = quantite + 1;
      if (quantite + 1 >= maxQuantite) {
        plusButton.style.cursor = "not-allowed";
      }
    }
  }

  function decrementQuantite() {
    var quantiteInput = document.getElementById("quantite");
    var quantite = parseInt(quantiteInput.value);
    if (quantite > 1) {
      quantiteInput.value = quantite - 1;
      var plusButton = document.querySelector("div[onclick='incrementQuantite()']");
      plusButton.style.cursor = "pointer";
    }
  }
  
  var quantiteInput = document.getElementById("quantite");
  quantiteInput.onkeyup = function() {
    var quantite = parseInt(quantiteInput.value);
    var maxQuantite = parseInt(quantiteInput.max);
    var plusButton = document.querySelector("div[onclick='incrementQuantite()']");
    if (quantite >= maxQuantite) {
      plusButton.style.cursor = "not-allowed";
    } else {
      plusButton.style.cursor = "pointer";
    }
  };
  
  quantiteInput.onchange = function() {
    var quantite = parseInt(quantiteInput.value);
    var maxQuantite = parseInt(quantiteInput.max);
    var plusButton = document.querySelector("div[onclick='incrementQuantite()']");
    if (quantite >= maxQuantite) {
      plusButton.style.cursor = "not-allowed";
    } else {
      plusButton.style.cursor = "pointer";
    }
  };
</script>
 
 



    
         
        

      
