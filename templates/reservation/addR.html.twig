  {% block body %}
<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Add Reservation!</h1>
                            </div>
                            {{form_start(form, {'attr': {'novalidate': 'novalidate'}})}}
                            <table>
                            <tr>
                            <td>{{ form_label(form.id_reservation,"ID de réservation")  }}</td>
                            <td>{{ form_widget(form.id_reservation) }}</td>  
                            <td> {{ form_errors(form.id_reservation) }} </td>
                            </tr>
                            
                            <tr>
                            <td> {{ form_label(form.date_reservation,"date de réservation")  }} </td>
                            <td>{{ form_widget(form.date_reservation) }} </td>  
                            <td> {{ form_errors(form.date_reservation) }}</td>
                            </tr>
                            
                            <tr>
                            <td>{{ form_label(form.heure_d,"heure de début de réservation")  }}</td>
                            <td> {{ form_widget(form.heure_d) }} </td>  
                            <td> {{ form_errors(form.heure_d) }} </td>
                            </tr>
                            
                            <tr>
                            <td> {{ form_label(form.heure_f,"heure de fin de réservation")  }} </td>
                            <td>  {{ form_widget(form.heure_f) }} </td>  
                            <td> {{ form_errors(form.heure_f) }} </td>
                            </tr>
                            
                            <tr>
                            <td> {{ form_label(form.type_sport,"type_sport de réservation")  }} </td>
                            <td>  {{ form_widget(form.type_sport) }} </td>  
                            <td> {{ form_errors(form.type_sport) }} </td>
                            </tr>
                            
                            <tr>
                            <td> {{ form_label(form.cout,"cout de réservation")  }} </td>
                            <td>  {{ form_widget(form.cout) }} </td>  
                            <td> {{ form_errors(form.cout) }} </td>
                            </tr>
                                      




</table>

 {{ form_widget(form.save)}} 
{{form_end(form)}}

                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {% endblock %}
{% block js %}
    <!-- Bootstrap core JavaScript-->
    <script src="{{asset('vendor/jquery/jquery.min.js')}}"></script>
