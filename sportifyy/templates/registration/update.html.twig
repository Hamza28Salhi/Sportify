{% block title %}Register{% endblock %}



{% block body %}
{{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}} ) }}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <img src="{{asset('img/sacha.png')}}" class="col-lg-5 d-none d-lg-block "> </img>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Join The Sportify Army!</h1>
                            </div>
                            <form class="user">
                                


    
         
         {{ form_start(registrationForm) }}  
        <div class="col-sm-6">{{ form_row(registrationForm.email) }}</div>
        <div class="col-sm-6">{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}</div>
        <div class="form-inline ">{{ form_row(registrationForm.agreeTerms) }}</div>

    

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}



                                
                                
                                
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login    ">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {% block js %}

