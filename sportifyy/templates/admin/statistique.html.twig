   if (roleName === 'ROLE_ADMIN') {
       roleName = 'admin';
   } else if (roleName === 'ROLE_USER') {
       roleName = 'user';
   } else if (roleName === 'ROLE_BOBO') {
       roleName = 'shop manager';
   }
   roleNames.push(roleName);
   userCounts.push(userCount);
{% endfor %}
                            var chartData = {
                                labels: roleNames,
                                datasets: [{
                                    label: 'Number of Users',
                                    data: userCounts,
                                    backgroundColor: 'rgba(54, 122, 235, 0.2)',
                                    borderColor: 'rgba(54, 162, 235, 1)',
