<script>
  function incrementQuantity() {
    var input = document.getElementById("quantite");
    var currentQuantity = parseInt(input.value);
    input.value = currentQuantity + 1;
  }

  function decrementQuantity() {
    var input = document.getElementById("quantite");
    var currentQuantity = parseInt(input.value);
    if (currentQuantity > 1) {
      input.value = currentQuantity - 1;
    }
  }
</script>
 















           
                
                 

             
               
