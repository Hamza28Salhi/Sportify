<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }
    
    th, td {
        text-align: left;
        padding: 8px;
    }
    
    th {
        border-bottom: 2px solid black; /* ajouter une bordure en bas */
    }
</style>

{% set cart = app.session.get('cart', {}) %}
{% set total = 0 %}

{% if cart|length == 0 %}
    <p>Votre panier est vide.</p>
{% else %}
    <table>
        <thead>
            <tr>
                <th>nom_produit</th>
                <th>PrixProduit</th>
                <th>MarqueProduit</th>
                <th>Quantite</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for item in cart %}
                <tr>
                    <td>{{ item.nom_produit }}</td>
                    <td>{{ item.prix_produit }}</td>
                    <td>{{ item.marque_produit}}</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.prix_produit * item.quantite }}</td>
                    <td><a href="{{ path('remove_from_cart', {'id': item.id}) }}">Supprimer</a></td>
                </tr>
                {% set total = total + item.prix_produit * item.quantite %}
            {% endfor %}
            <tr>
                <td colspan="4" style="text-align:right"><strong>Somme Total :</strong></td>
                <td>{{ total }}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
{% endif %}

<p><button class="btn btn-primary">
